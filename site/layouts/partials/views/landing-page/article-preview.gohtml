<div class="article-preview">
    {{ partial "views/landing-page/article-preview-banner.gohtml" . }}

    <div class="timing">
        <time datetime="{{ .Date.Unix }}">{{ .Date.Format "02 Jan 2006" }}</time>
        <span>Â·</span>
        <span>{{ .ReadingTime }} min read</span>
